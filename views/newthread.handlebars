<div>
  <h2>Add New Thread</h2>

  <form class="form login-form" id="loginForm">
    <div class="form-group">
      <label for="title">Title:</label>
      <input class="form-input" type="text" id="title" />
    </div>
    <div class="form-group">
      <label for="content">Content:</label>
      <textarea class="form-input" id="content"></textarea>
    </div>
    <div class="form-group">
      <button class="btn btn-primary" type="submit">Create Thread</button>
    </div>
  </form>
</div>
