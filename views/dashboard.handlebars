<h2>Welcome, {{username}}!</h2>
<h3><a href="/dashboard/newthread">New Thread</a></h3>
{{#each threads as |thread|}}
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h2 class="card-title">
      <a href="/thread/{{thread.id}}">{{thread.title}}</a>
    </h2>
    <h3 class="card-subtitle mb-2 text-muted">Posted on {{format_date thread.date_created}}</h3>
    <p class="card-text">{{thread.content}}</p>
  </div>
</div>
{{/each}}
