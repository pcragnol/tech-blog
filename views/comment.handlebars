<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h2 class="card-title">{{title}}</h2>
    <h3 class="card-subtitle mb-2 text-muted">Posted by {{user.username}} on {{format_date date_created}}</h3>
    <p class="card-text">{{content}}</p>
  </div>
</div>
<form class="comment-form" data-id="{{id}}">
  <fieldset>
    <legend>Add Comment</legend>
    <div class="mb-3">
      <label for="comment-content" class="form-label">Comment</label>
      <textarea class="form-control" id="comment-content" rows="3" placeholder="Tell them how you really feel."></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Ship it!</button>
  </fieldset>
</form>
<a href="/thread/{{id}}">Back</a>

<script src="/scripts/comment.js"></script>
