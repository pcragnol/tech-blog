<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h2 class="card-title">{{title}}</h2>
    <h3 class="card-subtitle mb-2 text-muted">Posted by {{user.username}} on {{format_date date_created}}</h3>
    <p class="card-text">{{content}}</p>
    <a href="/thread/{{id}}/comment" class="card-link">Add a Comment</a>
  </div>
</div>
{{#each comments as |comment|}}
{{!-- <p>{{comment.content}}</p>
<h6>Commented by {{comment.user.username}} on {{format_date comment.date_created}}</h6> --}}
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h4 class="card-subtitle mb-2 text-muted">Commented by {{comment.user.username}} on {{format_date comment.date_created}}</h4>
    <p class="card-text">{{comment.content}}</p>
  </div>
</div>
{{/each}}
<a href="/">Back</a>
